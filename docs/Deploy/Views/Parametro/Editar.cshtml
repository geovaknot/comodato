@model _3M.Comodato.Front.Models.Parametro

@{
    ViewBag.Title = "Parâmetro";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Parâmetro (Editar)</h3>

<div class="well">

    @using (Html.BeginForm())
    {
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.nidParametro)

        <div class="form-group">
            <div class="col-8">
                <label class="control-label">Código</label>
                @Html.EditorFor(model => model.ccdParametro, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => model.ccdParametro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label class="control-label">Descrição</label>
                @Html.EditorFor(model => model.cdsParametro, new { htmlAttributes = new { @class = "form-control col-12", @rows = 3 } })
                @Html.ValidationMessageFor(model => model.cdsParametro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label class="control-label">Valores</label>
                @Html.EditorFor(model => model.cvlParametro, new { htmlAttributes = new { @class = "form-control col-12", @rows = 4 } })
                @Html.ValidationMessageFor(model => model.cvlParametro, "", new { @class = "text-danger" })
            </div>
        </div>

        <dvi class="form-group">
            <div class="col-3">
                <label class="control-label">Tipo de Parâmetro</label>
                @Html.DropDownListFor(model => model.flgTipoParametro, new SelectList(Model.tiposParametros, "Value", "Key"), new { @class = "valid form-control col-12" })
            </div>
        </dvi>
        <br/>

        <div class="form-group">
            <div class="col-12">
                <input type="submit" value="Gravar" class="btn btn-primary btn-sm" />
                @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemGravacaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Parametro';");
        };
    </script>
}


