@model _3M.Comodato.Front.Models.Modelo

@{
    ViewBag.Title = "Modelo";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Modelo (Excluir)</h3>

<h5>Confirma exclusão deste registro?</h5>
<div>
    <hr />

    <div class="form-group">
        <div class="col-8">
            <label class="control-label font-weight-bold">Código</label>
            <br />
            @Html.DisplayFor(model => model.CD_MODELO)
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <label class="control-label font-weight-bold">Descrição</label>
            <br />
            @Html.DisplayFor(model => model.DS_MODELO)
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <label class="control-label font-weight-bold">Complexidade</label>
            <br />
            @Html.DisplayFor(model => model.VL_COMPLEXIDADE_EQUIP)
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <label class="control-label font-weight-bold">Valor projetado do equipamento</label>
            <br />
            @Html.DisplayFor(model => model.VL_PROJETADO)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
            @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemExclusaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Modelo';");
        };
    </script>
}


