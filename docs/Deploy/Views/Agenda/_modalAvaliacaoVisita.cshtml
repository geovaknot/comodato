@model _3M.Comodato.Front.Models.ConsultaConfirmaVista

<!-- Modal -->
<div class="modal fade" id="AvaliacaoVisitaModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="exampleModalLongTitle">Confirmação do Atendimento</h5>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.SatisfacaoResposta.Visita.ID_VISITA)

                    <div class="form-group">
                        <label class="control-label">Avaliação</label>
                        <br />
                        <div class="custom-control-inline col-md-12">
                            <div id="ratingAvaliacaoVisita"></div>
                            <div id="notaAvaliacaoVisita" class="font-weight-bold" style="font-size:3.6em; text-align:center;"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Observações do atendimento</label>
                        @Html.EditorFor(model => model.SatisfacaoResposta.Justificativa, new { htmlAttributes = new { @class = "form-control col-12", @rows = 4 } })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnSalvarAvaliacaoVisitaModal" onclick="SalvarAvaliacaoVisita();">Confirmar Avaliação</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
