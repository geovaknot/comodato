@model _3M.Comodato.Front.Models.Contrato

@{
    ViewBag.Title = "Contrato";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Contrato (Excluir)</h3>

<h5>Confirma exclusão deste registro?</h5>
<div>
    <hr />
    <div class="form-row">
        <div class="form-group col-12">
            <label class="control-label font-weight-bold">Cliente</label>
            <br />
            @Html.DisplayFor(model => model.dsCliente)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-3">
            <label class="control-label font-weight-bold">N° Contrato</label>
            <br />
            @Html.DisplayFor(model => model.nnrContrato)
        </div>
        <div class="form-group col-3">
            <label class="control-label font-weight-bold">Status</label>
            <br />
            @Html.DisplayFor(model => model.dsStatus)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-3">
            <label class="control-label font-weight-bold">Data de Emissão</label>
            <br />
            @Html.DisplayFor(model => model.ddtEmissao)
        </div>

        <div class="form-group col-3">
            <label class="control-label font-weight-bold">Data de Recebimento</label>
            <br />
            @Html.DisplayFor(model => model.ddtRecebimento)
        </div>

        <div class="form-group col-3">
            <label class="control-label font-weight-bold">Data OK</label>
            <br />
            @Html.DisplayFor(model => model.ddtOk)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-6">
            <label class="control-label font-weight-bold">Modelo</label>
            <br />
            @Html.DisplayFor(model => model.cdsContratoTipo)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label font-weight-bold">Observação</label>
        <br />
        @Html.DisplayFor(model => model.cdsObservacao)
    </div>

    <div class="form-group">
        <label class="control-label font-weight-bold">Clausulas</label>
        <br />
        @Html.DisplayFor(model => model.cdsClausulas)
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
        @Html.ActionLink("Voltar", "Index", new { id = Model.nidCliente }, new { @class = "btn btn-primary btn-sm" })
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemExclusaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '@Url.Action("Index", "Contrato", new { id = Model.nidCliente })';");
        };
    </script>
}
