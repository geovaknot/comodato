    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(foo => foo.ccdFuncao).Titled("CÓDIGO").Sortable(false).Filterable(false);
    columns.Add(foo => foo.cdsFuncao).Titled("FUNÇÃO").Sortable(false).Filterable(false);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => "<a href='#' onclick='ExcluirConfirmar(" + o.nidPerfilFuncao + ")' class='fas fa-trash-alt fa-lg'> </a>");
