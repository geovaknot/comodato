@model _3M.Comodato.Front.Models.PerfilXFuncao

@{
    ViewBag.Title = "Perfil X Função";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Perfil X Função (Editar)</h3>

<div class="well">

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <div class="col-12">
                    <label class="control-label">Perfil</label>
                    @Html.DropDownListFor(model => model.perfil.nidPerfil, new SelectList(Model.perfis, "nidPerfil", "cdsPerfil"), "Selecione...", new { @class = "valid form-control col-12" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    <label class="control-label">Função</label>
                    @Html.DropDownListFor(model => model.funcao.nidFuncao, new SelectList(Model.funcoes, "nidFuncao", "cdsFuncao"), "Selecione...", new { @class = "js-example-basic-single ", @style = "width: 100% " })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="Gravar" class="btn btn-primary btn-sm" />
                    @*@Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })*@
                </div>
            </div>
        </div>
    }

</div>

<h5>Perfil com acesso as seguintes funções:</h5>
<div id="gridmvc">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        var URLObterLista = "@Url.Action("ObterListaPerfilXFuncaoJson", "PerfilXFuncao")";
        var URLExcluir = "@Url.Action("ExcluirPerfilXFuncaoJson", "PerfilXFuncao")";
    </script>

    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>
    <script type="text/javascript" src="~/Scripts/Comodato/PerfilXFuncao.js"></script>
}
