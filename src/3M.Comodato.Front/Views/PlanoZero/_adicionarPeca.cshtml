@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bg-dark">
            <h5 class="modal-title text-white">Plano Zero</h5>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label">Peça</label>
                    <select id="ddlPeca" class="js-select-basic-single col-md-12"></select>
                </div>
                <div class="form-control">
                    <div class="row">
                        <label class="control-label col-md-6">Qtde Estoque A.Téc.</label>
                        <div class="form-group col-md-3">
                            <input id="txtQtdEstoqueATec" value="0" class="form-control" type="text" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="control-label col-md-6">Qtde Estoque Rec.</label>
                        <div class="form-group col-md-3">
                            <input id="txtQtdEstoqueRec" value="0" class="form-control" type="text" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="control-label col-md-6">Qtde Estoque com Técnicos</label>
                        <div class="form-group col-md-3">
                            <input id="txtQtdEstoqueComTec" value="0" class="form-control" type="text" readonly />
                        </div>
                    </div>
                </div>

                <br />
                <div class="form-control">
                    <div class="row">
                        <label class="control-label col-md-6">Quantidade na máquina</label>
                        <div class="form-group col-md-3">
                            <input id="txtQtMaquina" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="row">
                        <label class="control-label col-md-6">Criticidade da peça (A, B, C)</label>
                        <div class="form-group col-md-4">
                            <select id="ddlCriticidade" class="js-select-basic-single">
                                <option value="" selected>Selecione...</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="control-label col-md-6">Estoque mínimo do técnico p/Ativo atendido</label>
                        <div class="form-group col-md-3">
                            <input id="txtQtEstoqueMin" class="form-control" type="text" />
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            <button type="button" id="btnSalvar" class="btn btn-primary">Salvar</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<script>
    $(document).ready(function () {
        $('.js-select-basic-single').select2();
        $('.modal-title').val('Plano Zero - ' + $('#txtDescricao').val());
        popularPecas();
    });

    $('#ddlPeca').on("select2:select", function (e) {
        consultarEstoquePeca(e.params.data.id);
    });

    $('#btnSalvar').click(function () {
        fnSalvarPlanoZero();
    });
</script>