@model IEnumerable<_3M.Comodato.Front.Models.AcessorioPedidoEnvio>
@using _3M.Comodato.Utility
@using GridMvc.Html

<div class="table table-hover">
    @Html.Grid(Model).Columns(columns =>
    {

        columns.Add(foo => foo.Modelo.CD_MODELO).Titled("Cód. Modelo");
        columns.Add(foo => foo.Modelo.DS_MODELO).Titled("Modelo");
        //columns.Add(foo => foo.Modelo.CD_LINHA_PRODUTO).Titled("LINHA");
        columns.Add(foo => foo.Quantidade).Titled("Qtde.");


        columns.Add()
            .Encoded(false)
            .Sanitized(false)
            .SetWidth(30)
            .RenderValueAs(o => o.ST_STATUS_PEDIDO != (int)ControlesUtility.Enumeradores.WorkflowPedidoEnvio.Rascunho ? "" : $"<b><a href=\"#\" onclick=\"RemoverAcessorio({o.CodigoAcessorio.ToString()}); return false;\" class='fas fa-trash-alt fa-lg' data-toggle='tooltip' data-placement='top' title='Excluir'></a></b>");

    }).Sortable(false).Filterable(false).SetLanguage("pt-BR")
</div>


