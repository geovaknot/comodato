@model _3M.Comodato.Front.Models.Grupo

@{
    ViewBag.Title = "Grupo";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Grupo (Editar)</h3>

<div class="well">

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr />
            @Html.HiddenFor(model => model.CancelarVerificarCodigo)

            <div class="form-group">
                <div class="col-4">
                    <label class="control-label">Código</label>
                    @Html.EditorFor(model => model.CD_GRUPO, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.CD_GRUPO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    <label class="control-label">Descrição</label>
                    @Html.EditorFor(model => model.DS_GRUPO, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.DS_GRUPO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="Gravar" class="btn btn-primary btn-sm" />
                    @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemGravacaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Grupo';");
        };
    </script>
}


