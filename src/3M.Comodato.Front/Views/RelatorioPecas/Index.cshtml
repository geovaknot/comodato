@using GridMvc.Html

@{
    ViewBag.Title = "Relatório de Peças";
}

<i class="fas fa-print fa-3x fa-pull-left"></i>
<h3>Relatório de Peças</h3>

<style>
    /* Override para manter o padrão de cor do placeholder 'select' */
    .select2-container--default .select2-selection--single .select2-selection__placeholder {
        color: #000000;
    }
</style>

<div class="well">
    <hr />

    @using (Html.BeginForm())
    {


        <div class="form-horizontal">
            <div class="form-row">
                <div class="form-group col-12">
                    @*<label class="control-label">Relatório de peças</label>*@
                    @*<select id="ddlTecnico" class="js-select-basic-single col-md-12" style="width: 100%"></select>*@
                </div>

                @*<div class="form-group col-5">
                        <label class="control-label">Equipamento</label>
                        <select id="ddlEquipamento" class="js-select-basic-single col-md-12" style="width: 100%"></select>
                    </div>*@
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Outras opções de Exibição</label>
                    @Html.DropDownList("selectModeloRelatorio", (SelectList)ViewBag.SelectModeloRelatorio, new { @class = "form-control col-md-12", @style = "width: 100%" })
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Status</label>
                    @Html.DropDownList("selectStatusRelatorio", (SelectList)ViewBag.SelectStatusRelatorio, "Selecione...", new { @class = "form-control col-md-6", @style = "width: 100%" })
                </div>
            </div>
        </div>

        @*<div class="form-horizontal">
            <div class="form-row">
                
            </div>
        </div>*@

        <div class="form-group">
            <button class="btn btn-primary btn-sm" type="button" id="btnImprimir">Imprimir</button>
            @*<button class="btn btn-primary btn-sm" type="button" id="btnLimpar">Limpar</button>*@
        </div>

    }
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>
    <script type="text/javascript" src="~/Scripts/Comodato/RelatorioPeca.js"></script>

    <script>
        var URLAPI = "@_3M.Comodato.Utility.ControlesUtility.Parametro.ObterValorParametro(_3M.Comodato.Utility.ControlesUtility.Constantes.URLAPI)";
