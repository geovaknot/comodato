@model _3M.Comodato.Front.Models.Tecnico

@{
    ViewBag.Title = "Técnico";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Técnico (Incluir)</h3>

<div class="well">

    @using (Html.BeginForm())
    {
    <div class="form-horizontal">
        <hr />

        <div class="form-row">
            <div class="form-group col-2">
                <label class="control-label">Código</label>
                @Html.EditorFor(model => model.CD_TECNICO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.CD_TECNICO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-2">
                <label class="control-label">Cód. BPCS (Emissão NF)</label>
                @Html.EditorFor(model => model.CD_BCPS, new { htmlAttributes = new { @class = "form-control col-12" } })

            </div>

            <div class="form-group col-6">
                <label class="control-label">Nome</label>
                @Html.EditorFor(model => model.NM_TECNICO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.NM_TECNICO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-2">
                <label class="control-label">Nome Reduzido</label>
                @Html.EditorFor(model => model.NM_REDUZIDO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.NM_REDUZIDO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-8">
                <label class="control-label">Endereço</label>
                @Html.EditorFor(model => model.EN_ENDERECO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.EN_ENDERECO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-4">
                <label class="control-label">Bairro</label>
                @Html.EditorFor(model => model.EN_BAIRRO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.EN_BAIRRO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-3">
                <label class="control-label">CEP</label>
                @Html.EditorFor(model => model.EN_CEP, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.EN_CEP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-4">
                <label class="control-label">Cidade</label>
                @Html.EditorFor(model => model.EN_CIDADE, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.EN_CIDADE, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-2">
                <label class="control-label">Estado</label>
                @Html.EditorFor(model => model.EN_ESTADO, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.EN_ESTADO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-3">
                <label class="control-label">Telefone</label>
                @Html.EditorFor(model => model.TX_TELEFONE, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.TX_TELEFONE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">E-mail</label>
            @Html.EditorFor(model => model.TX_EMAIL, new { htmlAttributes = new { @class = "form-control col-12" } })
            @Html.ValidationMessageFor(model => Model.TX_EMAIL, "", new { @class = "text-danger" })
        </div>

        <div class="form-row">
            <div class="form-group col-3">
                <label class="control-label">Tipo</label>
                @Html.DropDownListFor(model => model.TP_TECNICO, new SelectList(Model.tiposTecnicos, "value", "key"), new { @class = "valid form-control col-12" })
            </div>
            <div class="form-group col-4">
                <label class="control-label">Supervisão Técnico</label>
                @Html.DropDownListFor(model => model.usuariosSupervisorTecnico.nidUsuario, new SelectList(Model.usuariosSupervisoresTecnico, "nidUsuario", "cnmNome"), new { @class = "js-example-basic-single ", @style = "width: 100% " })

            </div>
            <div class="form-group col-2">
                <label class="control-label">Custo por hora</label>
                @Html.EditorFor(model => model.VL_CUSTO_HORA, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => Model.VL_CUSTO_HORA, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-2">
                <label class="control-label">Condição (Ativo)</label>
                @Html.DropDownListFor(model => model.FL_ATIVO, new SelectList(Model.SimNao, "value", "key"), new { @class = "valid form-control col-12" })
            </div>

            <div class="form-group col-1">
                <label class="control-label">Férias/Ausente</label>
                @Html.DropDownListFor(model => model.FL_FERIAS, new SelectList(Model.SimNao, "value", "key"), new { @class = "valid form-control col-12" })
            </div>
        </div>

        @*<div id="TransferirCarteira" class="form-group" style="display: none;">
            <label class="control-label">Transferir toda carteira de clientes para o técnico</label>
            @Html.DropDownListFor(model => model.tecnicoTransferenciaCarteira.CD_TECNICO, new SelectList(Model.tecnicosTransferenciaCarteira, "CD_TECNICO", "NM_TECNICO"), new { @class = "js-example-basic-single ", @style = "width: 100% " })
        </div>*@

        <div class="form-row">
            <div class="form-group col-6">
                <label class="control-label">Coordenador (Líder)</label>
                @Html.DropDownListFor(model => model.usuarioCoordenador.nidUsuario, new SelectList(Model.usuariosCoordenadores, "nidUsuario", "cnmNome"), new { @class = "js-example-basic-single ", @style = "width: 100% " })
            </div>
            <div class="form-group col-6">
                <label class="control-label">Vincular técnico ao usuário de sistema</label>
                @Html.DropDownListFor(model => model.usuario.nidUsuario, new SelectList(Model.usuarios, "nidUsuario", "cnmNome"), new { @class = "js-example-basic-single ", @style = "width: 100% " })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Empresa</label>
            @Html.DropDownListFor(model => model.empresa.CD_Empresa, new SelectList(Model.empresas, "CD_Empresa", "NM_Empresa"), new { @class = "valid form-control col-12" })
        </div>

        


        @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
        {
            <div class="form-group">
                <label class="text-danger">@ViewBag.Mensagem</label>
            </div>
        }

    </div>

        <div class="form-group">
            <input type="submit" value="Gravar" class="btn btn-primary btn-sm" />
            @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Tecnico.js"></script>
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemGravacaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Tecnico';");
        };
        function MensagemErroAtivo() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemGravacaoErroAtivo';

            Alerta("Aviso", mensagem);
        };
        function MensagemErroFerias() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemGravacaoErroFerias';

            Alerta("Aviso", mensagem);
        };
    </script>
}

