@model IEnumerable<_3M.Comodato.Front.Models.Parametro>

@using GridMvc.Html

@{
    ViewBag.Title = "Parâmetro";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Parâmetro</h3>

<p>
    <a class="btn btn-primary btn-sm" href="Parametro/Incluir">Novo registro <i class="far fa-sticky-note"></i></a>
</p>

<div class="table table-hover">
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(foo => foo.ccdParametro).Titled("CÓDIGO").Sortable(true).Filterable(true);
        columns.Add(foo => foo.cdsParametro).Titled("DESCRIÇÃO").Sortable(true).Filterable(true);
        columns.Add(foo => foo.cvlParametro).Titled("VALORES").Sortable(true).Filterable(true).SetWidth(350);
        columns.Add(foo => foo.flgTipoParametro).Titled("TIPO").Sortable(true).Filterable(true);
        columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink(" ", "Editar", new { idKey = HttpUtility.HtmlDecode(o.idKey) }, new { @class = "fas fa-pencil-alt fa-lg" }));
        columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink(" ", "Excluir", new { idKey = HttpUtility.HtmlDecode(o.idKey) }, new { @class = "fas fa-trash-alt fa-lg" }));
    }).WithPaging(10)
</div>

