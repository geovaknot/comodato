@model IEnumerable<_3M.Comodato.Front.Models.Peca>

@using GridMvc.Html

@{
    ViewBag.Title = "Peça";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Peça</h3>

<p>
    <a class="btn btn-primary btn-sm" href="Peca/Incluir">Novo registro <i class="far fa-sticky-note"></i></a>
</p>

<div class="table table-hover">
    @Html.Grid(Model).Columns(columns =>
        {
            columns.Add(foo => foo.CD_PECA).Titled("CÓDIGO").Sortable(true).Filterable(true);
            columns.Add(foo => foo.DS_PECA).Titled("DESCRIÇÃO").Sortable(true).Filterable(true);
            columns.Add(foo => foo.cdsFL_ATIVO_PECA).Titled("CONDIÇÃO").Sortable(true).Filterable(true);
            columns.Add(foo => foo.cdsTP_PECA).Titled("TP PEÇA").Sortable(true).Filterable(true);
            columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink(" ", "Editar", new { idKey = HttpUtility.HtmlDecode(o.idKey) }, new { @class = "fas fa-pencil-alt fa-lg" }));
            columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink(" ", "Excluir", new { idKey = HttpUtility.HtmlDecode(o.idKey) }, new { @class = "fas fa-trash-alt fa-lg" }));
        }).WithPaging(10)
</div>

