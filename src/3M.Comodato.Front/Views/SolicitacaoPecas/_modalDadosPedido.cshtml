
<!-- Modal -->
<div class="modal fade" id="ReclamacaoModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="exampleModalLongTitle">Enviar ao BPCS</h5>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input id="ped_IDITEM" type="hidden" class="form-control col-12 font-weight-bold" disabled>
                    
                    
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label class="control-label">Volume</label>
                            <input id="ped_VOL" class="form-control col-12 font-weight-bold">
                        </div>
                        <div class="form-group col-4" id="divLiquido">
                            <label class="control-label">Peso Líquido</label>
                            <input id="ped_PESOLQ" class="form-control col-12 font-weight-bold">
                        </div>
                        <div class="form-group col-4" id="divBruto">
                            <label class="control-label">Peso Bruto</label>
                            <input id="ped_PESOBT" class="form-control col-12 font-weight-bold">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-8">
                            <label class="control-label">Aprovador</label>
                            <input id="ped_AP" class="form-control col-12 font-weight-bold" disabled>
                        </div>
                        <div class="form-group col-4">
                            <label class="control-label">Ramal</label>
                            <input id="ped_RAMAL" class="form-control col-12 font-weight-bold">
                        </div>

                    </div>

                    <div class="form-row" style="display: none;">
                        <div class="form-group col-8">
                            <label class="control-label">Responsável Cliente</label>
                            <input id="ped_Resp" class="form-control col-12 font-weight-bold">
                        </div>
                        <div class="form-group col-4">
                            <label class="control-label">Tel. Cliente</label>
                            <input id="ped_Tel" class="form-control col-12 font-weight-bold" onkeypress="mask(this, mphone);" onblur="mask(this, mphone);">
                        </div>

                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnSalvarDadosPedido">Salvar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>