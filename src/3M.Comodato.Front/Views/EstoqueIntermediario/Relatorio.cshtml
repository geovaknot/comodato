
@{
    var PerfilTecnico = _3M.Comodato.Utility.ControlesUtility.Seguranca.VerificaUsuarioPerfisTecnicos(Convert.ToInt64(((_3M.Comodato.Entity.UsuarioPerfilEntity)Session["_CurrentUser"]).usuario.nidUsuario));
    ViewBag.Title = "Estoque Intermediário";
}

<i class="fas fa-print fa-3x fa-pull-left"></i>
<h3>Estoque Intermediário</h3>


<style>
    /* Override para manter o padrão de cor do placeholder 'select' */
    .select2-container--default .select2-selection--single .select2-selection__placeholder {
        color: #000000;
    }
</style>

<div class="well">
    <hr />
    <div class="form-row">

        <div class="form-inline col-12">
            <label class="control-label">Tipos de Relatórios: </label>
            <div class="radio col-2" style="max-width: 15.5%;">
                <label class="btn btn-default">
                    <input name="tipo" type="radio" value="T" checked="checked" class="form-control col-md-2" />&nbsp;Por Estoque
                </label>
            </div>

            <div class="radio col-2" style="max-width: 15.5%;">
                <label class="btn btn-default">
                    <input name="tipo" type="radio" value="P" class="form-control col-md-2" />&nbsp;Por Peça
                </label>
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-row">
            <div class="form-group col-6">
                <label class="control-label">Estoque</label>
                <select id="ddlEstoque" class="js-select-basic-single col-md-12" style="width: 100%"></select>
            </div>
            <div class="form-group col-6">
                <label class="control-label">Peça</label>
                <select id="ddlPeca" class="js-select-basic-single col-md-12" style="width: 100%"></select>
            </div>

        </div>

        <div class="form-row">
            <div class="form-inline col-12">
                <div class="checkbox-inline col-6">
                    <input id="estoqueAtivo" type="checkbox" checked="checked" class="form-control" />&nbsp;Filtrar estoques ativos
                </div>

                <div class="checkbox-inline col-6">
                    <input id="pecaAtivo" type="checkbox" checked="checked" class="form-control" />&nbsp; Filtrar peças ativas
                </div>
            </div>
        </div>

        <div>&nbsp;</div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary btn-sm" type="button" id="btnImprimir">Imprimir</button>
        <button class="btn btn-primary btn-sm" type="button" id="btnLimpar">Limpar</button>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var URLAPI = "@_3M.Comodato.Utility.ControlesUtility.Parametro.ObterValorParametro(_3M.Comodato.Utility.ControlesUtility.Constantes.URLAPI)";
        var URLSite = "@_3M.Comodato.Utility.ControlesUtility.Parametro.ObterValorParametro(_3M.Comodato.Utility.ControlesUtility.Constantes.URLSite)";
		var URLCriptografarChave = "@Url.Action("CriptografarChaveJson")";
        var nidUsuario = @Convert.ToInt64(((_3M.Comodato.Entity.UsuarioPerfilEntity)Session["_CurrentUser"]).usuario.nidUsuario);
        var nidPerfil = @Convert.ToInt64(((_3M.Comodato.Entity.UsuarioPerfilEntity)Session["_CurrentUser"]).perfil.nidPerfil);
        var perfilCliente = @Convert.ToInt64(_3M.Comodato.Utility.ControlesUtility.Enumeradores.Perfil.Cliente);
        var UsuarioTecnico = '@PerfilTecnico';
        var token = "@Convert.ToString(((_3M.Comodato.Entity.UsuarioPerfilEntity)Session["_CurrentUser"]).token)";
        @*var actionRelatorio = "@Url.Action("Imprimir", "EstoqueIntermediario")";*@
    </script>
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>
    <script type="text/javascript" src="~/Scripts/Comodato/EstoqueIntermediarioRpt.js"></script>
}

