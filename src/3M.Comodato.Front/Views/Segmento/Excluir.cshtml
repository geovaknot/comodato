@model _3M.Comodato.Front.Models.Segmento

@{
    ViewBag.Title = "Segmento";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Segmento (Excluir)</h3>

<h5>Confirma exclusão deste registro?</h5>
<span class="control-label font-weight-bold">Os clientes relacionados serão realocados para código '@_3M.Comodato.Utility.ControlesUtility.Parametro.ObterValorParametro(_3M.Comodato.Utility.ControlesUtility.Constantes.CodigoSegmentoRealocarExcluir)'.</span>
<div>
    <hr />
    @Html.HiddenFor(model => model.id_segmento)

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.ds_segmentomin, new { @class = "control-label font-weight-bold" })
            <br />
            @Html.DisplayFor(model => model.ds_segmentomin)
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.nm_criticidade, new { @class = "control-label font-weight-bold" })
            <br />
            @Html.DisplayFor(model => model.nm_criticidade)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-12">
            @Html.LabelFor(model => model.ds_segmento, new { @class = "control-label font-weight-bold" })
            <br />
            @Html.DisplayFor(model => model.ds_segmento)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-8">
            @Html.LabelFor(model => model.ds_descricao, new { @class = "control-label font-weight-bold" })
            <br />
            @Html.DisplayFor(model => model.ds_descricao)
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
    {
        <div class="form-group">
            <label class="text-danger">@ViewBag.Mensagem</label>
        </div>
    }

</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
        @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemExclusaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Segmento';");
        };
    </script>
}




