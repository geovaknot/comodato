@model _3M.Comodato.Front.Models.OsPadrao

<!-- Modal -->
<style>
    .without_ampm::-webkit-datetime-edit-ampm-field {
        display: none;
    }
</style>
<div class="modal fade" id="ReclamacaoModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="exampleModalLongTitle">Reclamação</h5>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.reclamacaoOs.ID_RELATORIO_RECLAMACAO)

                    <div class="form-row">
                        <div class="form-group col-6">
                            <label class="control-label">Tipo de Reclamação</label>
                            @Html.DropDownListFor(model => model.reclamacaoOs.CD_TIPO_RECLAMACAO, new SelectList(Model.reclamacaoOs.tiposReclamacao, "Key", "Value"), new { @class = "valid form-control col-12" })
                            <label id="validaCD_TIPO_RECLAMACAO" class="control-label text-danger" style="display: none;">Conteúdo obrigatório!</label>
                        </div>
                        <div class="form-group col-6">
                            <label class="control-label">Status</label>
                            @Html.EditorFor(model => model.reclamacaoOs.rrStatusEntity.DS_STATUS_NOME, new { htmlAttributes = new { @class = "form-control col-12 text-center font-weight-bold", @readonly = "readonly" } })
                        </div>
                        
                    </div>

                    @*<div class="form-row">
                        
                    </div>*@

                    <div class="form-row">

                        <div class="form-group col-6">
                            <label class="control-label">Peça</label>
                            @Html.DropDownListFor(model => model.reclamacaoOs.pecaEntity.CD_PECA, new SelectList(Model.reclamacaoOs.listaPecas, "CD_PECA", "DS_PECA"), "Selecione...", new { @class = "js-example-basic-single form-control col-12", @style = "width: 100%" })
                            <label id="validaid_item_pedido_Peca" class="control-label text-danger" style="display: none;">Conteúdo obrigatório!</label>
                        </div>
                        <div class="form-group col-6">
                            <label class="control-label">Tipo de Atendimento</label>
                            @Html.DropDownListFor(model => model.reclamacaoOs.CD_TIPO_ATENDIMENTO, new SelectList(Model.reclamacaoOs.tiposAtendimento, "Key", "Value"), new { @class = "js-example-basic-single form-control col-12", @style = "width: 100%" })
                            <label id="validaCD_TIPO_ATENDIMENTO" class="control-label text-danger" style="display: none;">Conteúdo obrigatório!</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-12">
                            <label class="control-label">Motivo</label>
                            @Html.EditorFor(model => model.reclamacaoOs.DS_MOTIVO, new { htmlAttributes = new { @class = "form-control col-12" } })
                            <label id="validaDS_MOTIVO" class="control-label text-danger" style="display: none;">Conteúdo obrigatório!</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-12">
                            <label class="control-label">Descrição do Problema</label>
                            @Html.TextAreaFor(model => model.reclamacaoOs.DS_DESCRICAO, new { @class = "form-control col-12" })
                            <label id="validaDS_DESCRICAO" class="control-label text-danger" style="display: none;">Conteúdo obrigatório!</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-5">
                            <label class="control-label">Tempo de Serviço(HH:MM)</label>
                            @Html.EditorFor(model => model.reclamacaoOs.TEMPO_ATENDIMENTO_FORMATADO, new { htmlAttributes = new { @class = "form-control col-12 text-center font-weight-bold without_ampm", @type = "time" } })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-12">
                            <label class="control-label">Imagem</label>
                            <input class="form-control col-12" type="file" id="FotoUp">
                            <input type="hidden" id="DS_ARQUIVO_FOTO" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    @if (ViewBag.Tecnico3M == "S")
                    {
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnSalvarReclamacaoModal">Salvar</button>
                    }
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>