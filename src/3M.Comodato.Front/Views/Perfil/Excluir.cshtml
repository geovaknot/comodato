@model _3M.Comodato.Front.Models.Perfil

@{
    ViewBag.Title = "Perfil";
}

<i class="fas fa-cubes fa-3x fa-pull-left"></i>
<h3>Perfil (Excluir)</h3>

<h5>Confirma exclusão deste registro?</h5>
<div>
    <hr />

    <div class="form-group">
        <label class="control-label font-weight-bold">Código</label>
        <br />
        @Html.DisplayFor(model => model.ccdPerfil)
    </div>

    <div class="form-group">
        <label class="control-label font-weight-bold">Descrição</label>
        <br />
        @Html.DisplayFor(model => model.cdsPerfil)
    </div>

    <div class="form-group">
        <label class="control-label font-weight-bold">Status</label>
        <br />
        @Html.DisplayFor(model => model.bidAtivo)
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
            @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-primary btn-sm" })
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Comodato/Util.js"></script>

    <script type="text/javascript">
     @Model.JavaScriptToRun

        function MensagemSucesso() {
            var mensagem = '@_3M.Comodato.Utility.ControlesUtility.Constantes.MensagemExclusaoSucesso';

            AlertaRedirect("Aviso", mensagem, "window.location = '../Perfil';");
        };
    </script>
}